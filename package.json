{
  "name": "root",
  "version": "0.0.0",
  "packageManager": "yarn@4.2.2",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "vitest",
    "storybook": "storybook dev -p 6006 --config-dir ./apps/storybook",
    "storybook:clean": "storybook dev -p 6006 --no-manager-cache --config-dir ./apps/storybook",
    "storefront": "yarn workspace storefront dev",
    "theme": "yarn workspace theme dev",
    "devsite": "yarn workspace dev dev",
    "build": "lerna run build",
    "build:theme": "yarn workspace theme build",
    "build:react": "yarn workspace @digdir/designsystemet-react build",
    "build:tokens": "yarn workspace @digdir/designsystemet build:tokens",
    "build:css": "yarn workspace @digdir/designsystemet-css build",
    "build:storybook": "storybook build -o ./dist/storybook --config-dir ./apps/storybook",
    "build:storefront": "yarn workspace storefront building",
    "build:devsite": "yarn workspace dev building",
    "start:storefront": "yarn workspace storefront start",
    "lerna:version": "lerna version  --conventional-commits --no-private",
    "lerna:publish": "lerna publish from-package",
    "lint": "eslint",
    "lint:all": "eslint .",
    "lint:all:fix": "yarn run lint:all --fix",
    "lint-style": "stylelint  \"**/*.css\"",
    "lint-style:fix": "yarn run lint-style --fix",
    "types:react": "yarn workspace @digdir/designsystemet-react types",
    "types:storefront": "yarn workspace storefront types"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
