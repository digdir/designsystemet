{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "engines": {
    "node": ">=22.21.1"
  },
  "scripts": {
    "test": "vitest",
    "test:cli": "pnpm --filter @digdir/designsystemet test --verbose",
    "test:storybook": "pnpm --filter @web/storybook test-storybook",
    "test:coverage": "vitest run --coverage",
    "storybook": "pnpm --filter @web/storybook dev",
    "www": "pnpm --filter @web/www dev",
    "themebuilder": "pnpm --filter @web/themebuilder dev",
    "build": "pnpm --filter @digdir/* build",
    "build:all": "pnpm -r build",
    "build:react": "pnpm --filter @digdir/designsystemet-react build",
    "build:css": "pnpm --filter @digdir/designsystemet-css build",
    "build:cli": "pnpm --filter @digdir/designsystemet build",
    "build:types": "pnpm --filter @digdir/designsystemet-types build",
    "build:storybook": "pnpm --filter @web/storybook build",
    "build:www": "pnpm --filter @web/www build",
    "build:themebuilder": "pnpm --filter @web/themebuilder build",
    "types": "pnpm -r types",
    "types:react": "pnpm --filter @digdir/designsystemet-react types",
    "version-packages": "changeset version && node scripts/sync-changelogs.js && pnpm build:types && pnpm build:cli && node scripts/sync-cli-schema.js && git add apps/www/content/changelogs && git add apps/www/content/schemas/cli && git commit -m \"sync www changelogs and schema\" || true",
    "publish-packages": "pnpm build && changeset publish",
    "chromatic": "pnpm --filter @web/storybook chromatic",
    "update:template": "pnpm --filter @digdir/designsystemet update:template",
    "update:theme-digdir": "pnpm --filter @digdir/designsystemet update:theme-digdir",
    "update:theme": "pnpm build:cli && pnpm --filter @digdir/designsystemet-theme update:theme"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^22.19.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/browser-playwright": "4.0.15",
    "@vitest/ui": "4.0.15",
    "chromatic": "^13.3.4",
    "just-pnpm": "^1.0.2",
    "tsconfck": "^3.1.6",
    "typescript": "^5.9.3",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.3.0",
    "vitest": "4.0.15"
  }
}
